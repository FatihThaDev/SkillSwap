RewriteEngine On
RewriteBase /SkillSwap/backend/

# Serve existing files/directories directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route everything else to index.php (FlightPHP)
RewriteRule ^ index.php [QSA,L]

#Enables the URL rewriting engine
RewriteEngine On
# Ensures the requested URL is not an existing fie
RewriteCond %{REQUEST_FILENAME} !-f
#Ensures the requested URL is not an existing directory
RewriteCond %{REQUEST_FILENAME} !-d
# Redirects all requests to index.php, preserving query 
RewriteRule ^(.*)$ index.php [QSA,L]
